{
    "manifest_version": 3,
    "name": "Quick Notes",
    "description": "Select text on a website and save your selection as a note for your studies.",
    "icons": {
        "16": "icons/icon16-active.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
    "version": "1.0",
    "action": {
        "default_popup":"popup/popup.html"
    },
    "permissions": ["tabs", "storage", "activeTab", "webNavigation"],
    "background":{
        "service_worker":"service-worker.js",
        "type": "module"
    },
    "content_scripts":[
        {
            "js":["scripts/content-script.js"],
            "matches":["<all_urls>"]
        }
    ]
}